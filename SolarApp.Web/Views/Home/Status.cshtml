@model SystemStateViewModel
@{
    ViewBag.Title = "Home Page";
}
<p></p>
<div class="row">
    <div class="col-md-4"><h1>System Status</h1></div>
</div>
<p></p>
<p></p>

@if (Model.IsDatabaseAvailable)
{
    <div class="row">
        <div class="col-md-4">Last Run Date:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.LastRunDate)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Latest Meter Reading:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.LatestMeterReading)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Number of data points:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.NumberOfDataPoints)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Number of failed data:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.NumberOfFailedData)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Number of weather forecasts:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.NumberOfWeatherForecasts)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Number of weather observations:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.NumberOfWeatherObservations)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Sunrise today is at:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.Sunrise)</div>
    </div>
    <div class="row">
        <div class="col-md-4">Sunrise today is at:</div>
        <div class="col-md-3">@Html.DisplayTextFor(m => m.Sunset)</div>
    </div>
}
else
{
    <div class="jumbotron">
        Database Unavailable
    </div>
}
<div class="row">
    <div class="col-md-4">Environment</div>
    <div class="col-md-3">@Html.DisplayTextFor(m => m.Environment)</div>
</div>